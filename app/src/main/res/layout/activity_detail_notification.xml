<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.DetailNotificationActivity">

    <include
        android:id="@+id/action_profile_toolbar"
        layout="@layout/view_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_profile_toolbar">

        <TextView
            style="@style/Text.Regular.UserLabel"
            android:layout_marginEnd="70dp"
            android:text="Pengirim" />

        <TextView
            android:id="@+id/tv_sender"
            style="@style/Text.SemiBold.UserValue"
            android:textSize="18sp"
            tools:text="Pengirim" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@color/gray" />

        <TextView
            style="@style/Text.Regular.UserLabel"
            android:text="Tanggal" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/Text.SemiBold.UserValue"
            android:textSize="18sp"
            tools:text="Tanggal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@color/gray" />

        <TextView
            style="@style/Text.Regular.UserLabel"
            android:text="Judul" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/Text.SemiBold.UserValue"
            android:textSize="18sp"
            tools:text="Judul" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@color/gray" />

        <TextView
            style="@style/Text.Regular.UserLabel"
            android:text="Pesan" />

        <TextView
            android:id="@+id/tv_message"
            style="@style/Text.SemiBold.UserValue"
            android:textSize="18sp"
            tools:text="Pesan" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
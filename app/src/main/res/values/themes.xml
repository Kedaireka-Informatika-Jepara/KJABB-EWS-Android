<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. Theme.MaterialComponents.Light.NoActionBar Theme.Material3.Light.NoActionBar-->
    <style name="Theme.EWS3SWJ" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/royal_blue</item>
        <item name="colorPrimaryVariant">@color/crayola</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/caribbean_green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryContainer">@color/royal_blue</item>
        <item name="colorSecondaryContainer">@color/tipe1</item>
        <item name="colorOnSecondaryContainer">@color/royal_blue</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/royal_blue</item>
    </style>

    <style name="EditTextLabel">
        <item name="fontFamily">@font/nunito_sans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.EWS3SWJ.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EWS3SWJ.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EWS3SWJ.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Text.Regular">
        <item name="fontFamily">@font/nunito_sans_regular</item>
        <item name="android:textColor">@color/jet</item>
    </style>

    <style name="Text.Regular.UserLabel">
        <item name="android:textSize">16sp</item>
<!--        <item name="android:textColor">@color/black</item>-->
    </style>

    <style name="Text.SemiBold">
        <item name="fontFamily">@font/nunito_sans_semibold</item>
        <item name="android:textColor">@color/jet</item>
    </style>

    <style name="Text.SemiBold.UserValue">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Text.Bold">
        <item name="fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textColor">@color/jet</item>
    </style>

    <style name="Text.Bold.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Bold.Appbar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.SemiBold.Auth">
        <item name="android:textColor">@color/royal_blue</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Title">
        <item name="fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/jet</item>
    </style>

    <style name="Text.SubTitle">
        <item name="fontFamily">@font/nunito_sans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/arsenic</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="EditText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="EditText.InputData">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="EditText.AuthLayout">
        <item name="hintTextColor">@color/royal_blue</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="EditText.AuthInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:textColor">@color/arsenic</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/nunito_sans_regular</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Button.Auth">
<!--        <item name="android:background">@drawable/bg_button_login</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">50dp</item>
        <item name="fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="Button.Action">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Text.Bold.Button</item>
    </style>

    <style name="LabelNavDrawer">
        <item name="fontFamily">@font/nunito_sans_semibold</item>
<!--        <item name="android:textColor">@color/jet</item>-->
    </style>

</resources>